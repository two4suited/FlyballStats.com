@page "/"

<PageTitle>FlyballStats.com - Professional Tournament Management</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-align: center;
        padding: 4rem 2rem;
        margin: -2rem -1rem 3rem -1rem;
        border-radius: 0 0 24px 24px;
    }
    .feature-card {
        transition: transform 0.2s ease-in-out;
        border-radius: 16px;
    }
    .feature-card:hover {
        transform: translateY(-4px);
    }
    .stats-card {
        background: linear-gradient(45deg, #667eea 30%, #764ba2 90%);
        color: white;
        text-align: center;
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <MudText Typo="Typo.h2" Class="mb-4">
        <MudIcon Icon="Icons.Material.Filled.SportsTennis" Style="font-size: 2.5rem; margin-right: 0.5rem;" />
        FlyballStats.com
    </MudText>
    <MudText Typo="Typo.h5" Class="mb-4" Style="opacity: 0.9;">
        Professional Flyball Tournament Management System
    </MudText>
    <MudText Typo="Typo.body1" Class="mb-6" Style="max-width: 600px; margin: 0 auto; opacity: 0.8;">
        Streamline your flyball racing tournaments with real-time race management, 
        live scoring, and comprehensive tournament organization tools.
    </MudText>
    <MudButton Variant="Variant.Filled" 
               Color="Color.Secondary" 
               Size="Size.Large"
               Href="tournament-upload"
               StartIcon="@Icons.Material.Filled.RocketLaunch"
               Class="mt-4">
        Get Started
    </MudButton>
</div>

<!-- Quick Stats Section -->
<MudGrid Class="mb-6">
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-6 stats-card feature-card" Elevation="4">
            <MudIcon Icon="Icons.Material.Filled.Timer" Style="font-size: 3rem;" Class="mb-3" />
            <MudText Typo="Typo.h4" Class="mb-2">Real-Time</MudText>
            <MudText Typo="Typo.body1">Live race tracking and instant results</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-6 stats-card feature-card" Elevation="4">
            <MudIcon Icon="Icons.Material.Filled.Groups" Style="font-size: 3rem;" Class="mb-3" />
            <MudText Typo="Typo.h4" Class="mb-2">Team-Focused</MudText>
            <MudText Typo="Typo.body1">Built by the flyball community</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-6 stats-card feature-card" Elevation="4">
            <MudIcon Icon="Icons.Material.Filled.CloudSync" Style="font-size: 3rem;" Class="mb-3" />
            <MudText Typo="Typo.h4" Class="mb-2">Cloud-Based</MudText>
            <MudText Typo="Typo.body1">Access anywhere, anytime</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<!-- Main Features -->
<MudText Typo="Typo.h4" Class="mb-4 text-center">Tournament Management Features</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6 feature-card" Elevation="2">
            <MudIcon Icon="Icons.Material.Filled.ViewKanban" Color="Color.Primary" Style="font-size: 2.5rem;" Class="mb-3" />
            <MudText Typo="Typo.h6" GutterBottom="true">Live Tournament Board</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">
                Monitor live race results, ring status, and team performance in real-time with 
                our interactive tournament dashboard.
            </MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" 
                       Href="live-board"
                       StartIcon="@Icons.Material.Filled.Launch">
                View Live Board
            </MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6 feature-card" Elevation="2">
            <MudIcon Icon="Icons.Material.Filled.Upload" Color="Color.Secondary" Style="font-size: 2.5rem;" Class="mb-3" />
            <MudText Typo="Typo.h6" GutterBottom="true">Schedule Management</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">
                Easily upload and manage tournament schedules, race orders, and team information 
                with our streamlined CSV import system.
            </MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" 
                       Href="tournament-upload"
                       StartIcon="@Icons.Material.Filled.Upload">
                Upload Schedule
            </MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6 feature-card" Elevation="2">
            <MudIcon Icon="Icons.Material.Filled.Settings" Color="Color.Tertiary" Style="font-size: 2.5rem;" Class="mb-3" />
            <MudText Typo="Typo.h6" GutterBottom="true">Ring Configuration</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">
                Configure multiple racing rings, set ring colors, and customize tournament 
                display settings for optimal event management.
            </MudText>
            <MudButton Variant="Variant.Text" Color="Color.Tertiary" 
                       Href="ring-configuration"
                       StartIcon="@Icons.Material.Filled.Tune">
                Configure Rings
            </MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6 feature-card" Elevation="2">
            <MudIcon Icon="Icons.Material.Filled.Analytics" Color="Color.Info" Style="font-size: 2.5rem;" Class="mb-3" />
            <MudText Typo="Typo.h6" GutterBottom="true">Performance Analytics</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">
                Track team performance, race times, and tournament statistics with 
                comprehensive analytics and reporting tools.
            </MudText>
            <MudButton Variant="Variant.Text" Color="Color.Info" 
                       StartIcon="@Icons.Material.Filled.BarChart">
                View Analytics
            </MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6 feature-card" Elevation="2">
            <MudIcon Icon="Icons.Material.Filled.Notifications" Color="Color.Warning" Style="font-size: 2.5rem;" Class="mb-3" />
            <MudText Typo="Typo.h6" GutterBottom="true">Real-Time Notifications</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">
                Stay updated with instant notifications for race completions, schedule changes, 
                and important tournament announcements.
            </MudText>
            <MudButton Variant="Variant.Text" Color="Color.Warning" 
                       StartIcon="@Icons.Material.Filled.NotificationsActive">
                Setup Alerts
            </MudButton>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Class="pa-6 feature-card" Elevation="2">
            <MudIcon Icon="Icons.Material.Filled.Phone" Color="Color.Success" Style="font-size: 2.5rem;" Class="mb-3" />
            <MudText Typo="Typo.h6" GutterBottom="true">Mobile Responsive</MudText>
            <MudText Typo="Typo.body2" Class="mb-4">
                Access your tournament data from any device. Our responsive design ensures 
                perfect functionality on phones, tablets, and desktops.
            </MudText>
            <MudButton Variant="Variant.Text" Color="Color.Success" 
                       StartIcon="@Icons.Material.Filled.Smartphone">
                Mobile View
            </MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

<!-- Call to Action -->
<MudPaper Class="pa-8 mt-8" Style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); text-align: center;">
    <MudText Typo="Typo.h4" Class="mb-4">Ready to Streamline Your Tournament?</MudText>
    <MudText Typo="Typo.body1" Class="mb-6">
        Join tournament directors worldwide who trust FlyballStats.com to make their events run smoother.
    </MudText>
    <MudButton Variant="Variant.Filled" 
               Color="Color.Primary" 
               Size="Size.Large"
               Href="tournament-upload"
               StartIcon="@Icons.Material.Filled.Upload"
               Class="mr-4">
        Upload Your Schedule
    </MudButton>
    <MudButton Variant="Variant.Outlined" 
               Color="Color.Primary" 
               Size="Size.Large"
               StartIcon="@Icons.Material.Filled.Help">
        Learn More
    </MudButton>
</MudPaper>
